{% extends 'base.html.twig' %}

{% block title %}R√©sultats - WowPlanet{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-8">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-yellow-500 to-amber-500 bg-clip-text text-transparent">
                WoW Currency Tracker
            </h1>
            <p class="text-lg" style="color: var(--text-secondary);">
                Trouvez quel personnage poss√®de le plus de monnaie
            </p>
        </div>

        <div class="mb-6">
            <div class="flex items-center justify-between">
                <h2 class="text-2xl font-bold" style="color: var(--text-primary);">R√©sultats pour : {{ currency }}</h2>
                <a href="{{ path('app_currency_search') }}" class="px-4 py-2 rounded-lg card-glass hover:bg-white/5 transition-colors text-sm font-medium">
                    ‚Üê Nouvelle recherche
                </a>
            </div>
        </div>

        {% if results.error is defined %}
            <div class="card-glass rounded-xl p-6 bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200">
                <p class="font-semibold">‚ùå Erreur</p>
                <p class="mt-2">{{ results.error }}</p>
            </div>
        {% elseif results.characters is empty %}
            <div class="card-glass rounded-xl p-8 text-center">
                <p class="text-xl font-semibold mb-2">‚ùå Aucun personnage ne poss√®de cette monnaie</p>
                <p class="text-sm" style="color: var(--text-secondary);">
                    Analys√© {{ results.total_characters }} personnages
                </p>
            </div>
        {% else %}
            <!-- Total Currency Banner -->
            <div class="card-glass rounded-2xl p-6 mb-8 bg-gradient-to-r from-yellow-500/10 to-amber-500/10 border-2 border-yellow-500/20">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium opacity-70 mb-1">Total cumul√© sur tous les personnages</p>
                        <p class="text-4xl font-black bg-gradient-to-r from-yellow-500 to-amber-500 bg-clip-text text-transparent">
                            {{ results.total_currency|number_format(0, ',', ' ') }} {{ currency }}
                        </p>
                    </div>
                    <div class="text-6xl">üí∞</div>
                </div>
            </div>

            <p class="mb-6 text-sm" style="color: var(--text-secondary);">
                ‚úì Analys√© {{ results.total_characters }} personnages - {{ results.characters|length }} r√©sultats trouv√©s
            </p>

            {% if results.characters|length >= 3 %}
                <div class="mb-16">
                    <h3 class="text-3xl font-bold text-center mb-12">
                        <span class="bg-gradient-to-r from-yellow-500 to-amber-500 bg-clip-text text-transparent">Meilleurs Personnages</span>
                    </h3>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto px-4">
                        {% set top3 = results.characters|slice(0, 3) %}
                        {% for r in top3 %}
                            <div class="card-glass rounded-2xl p-6 text-center border-none shadow-lg flex flex-col justify-between h-full hover:shadow-xl transition-all group">
                                <div class="mb-4">
                                    <h4 class="text-3xl font-black mb-1 truncate text-white">
                                        {{ r.character.name }}
                                    </h4>
                                    <p class="text-xs opacity-60 font-medium" style="color: var(--text-secondary);">
                                        {{ r.character.realm.name }} - {{ r.character.playable_class.name }}
                                    </p>
                                </div>

                                <div class="space-y-4">
                                    <div class="pt-2">
                                        <div class="relative w-full h-20 rounded-xl overflow-hidden bg-gradient-to-r from-yellow-500/20 to-amber-500/20 flex items-center justify-center shadow-inner">
                                            <span class="text-3xl font-black bg-gradient-to-r from-yellow-500 to-amber-500 bg-clip-text text-transparent">
                                                {{ r.quantity|number_format(0, ',', ' ') }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <div class="mb-8 flex items-center justify-between">
                <h3 class="text-2xl font-bold flex items-center gap-3" style="color: var(--text-primary);">
                    <span class="w-1.5 h-6 bg-yellow-500 rounded-full"></span>
                    Classement Complet
                </h3>
                <div class="text-xs font-semibold opacity-40 uppercase tracking-widest">
                    <span data-results-pagination-target="pageInfo"></span>
                </div>
            </div>

            <div data-controller="results-pagination" data-results-pagination-per-page-value="12">
                <!-- Grid Layout -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 mb-12">
                    {% for r in results.characters %}
                        <twig:CurrencyCard :result="r" :index="loop.index" />
                    {% endfor %}
                </div>

                <!-- Pagination -->
                {% set totalPages = (results.characters|length / 12)|round(0, 'ceil') %}
                {% if totalPages > 1 %}
                    <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
                        <!-- Previous Button -->
                        <button
                            data-results-pagination-target="prevButton"
                            data-action="click->results-pagination#previousPage"
                            class="px-4 py-2 rounded-lg card-glass hover:shadow-glow transition-all disabled:opacity-50 disabled:cursor-not-allowed font-medium"
                        >
                            ‚Üê Pr√©c√©dent
                        </button>

                        <!-- Page Numbers -->
                        <div class="flex gap-1.5 flex-wrap justify-center">
                            {% for page in 1..totalPages %}
                                {% if page <= 3 or page > totalPages - 2 or (totalPages > 7 and page >= (totalPages / 2)|round - 1 and page <= (totalPages / 2)|round + 1) %}
                                    <button
                                        data-results-pagination-target="page"
                                        data-page="{{ page }}"
                                        data-action="click->results-pagination#goToPage"
                                        class="w-9 h-9 rounded-lg text-sm font-bold transition-all {% if page == 1 %}bg-yellow-600 text-white shadow-lg shadow-yellow-500/20{% else %}bg-white/5 hover:bg-white/10 text-white/50 hover:text-white{% endif %}"
                                    >
                                        {{ page }}
                                    </button>
                                {% elseif (page == 4 and totalPages > 7) or (page == totalPages - 2 and totalPages > 7) %}
                                    <span class="w-9 h-9 flex items-center justify-center opacity-30">...</span>
                                {% endif %}
                            {% endfor %}
                        </div>

                        <!-- Next Button -->
                        <button
                            data-results-pagination-target="nextButton"
                            data-action="click->results-pagination#nextPage"
                            class="px-4 py-2 rounded-lg card-glass hover:shadow-glow transition-all disabled:opacity-50 disabled:cursor-not-allowed font-medium"
                        >
                            Suivant ‚Üí
                        </button>
                    </div>
                {% endif %}
            </div>
        {% endif %}
    </div>
</div>

<style>
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
{% endblock %}
