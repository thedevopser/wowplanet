{% extends 'base.html.twig' %}

{% block title %}Recherche de Monnaies - WowPlanet{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-8">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-linear-to-r from-blue-500 to-purple-500 bg-clip-text text-transparent">
                üí∞ WoW Currency Tracker
            </h1>
            <p class="text-lg" style="color: var(--text-secondary);">
                Trouvez quel personnage poss√®de le plus de monnaie
            </p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="mb-4 p-4 rounded-lg bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-4 p-4 rounded-lg bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200">
                {{ message }}
            </div>
        {% endfor %}

        {% if not has_data %}
            <!-- Upload Form -->
            <div class="card-glass rounded-2xl p-8 md:p-10 shadow-glow max-w-2xl mx-auto mb-8" data-controller="currency-tabs currency-upload">
                <h2 class="text-2xl font-bold mb-6">Charger les donn√©es de monnaie</h2>

                <form action="{{ path('app_currency_upload') }}" method="POST" enctype="multipart/form-data" data-action="submit->currency-upload#submit" data-currency-upload-target="form">
                    <!-- Token CSRF -->
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('currency_upload') }}" data-controller="csrf-protection">

                    <!-- Navigation onglets -->
                    <div class="flex border-b border-gray-200 dark:border-gray-700 mb-6">
                        <button type="button"
                                data-currency-tabs-target="fileTab"
                                data-action="click->currency-tabs#showFileTab"
                                class="flex-1 px-4 py-3 font-semibold rounded-t-lg transition-all tab-active">
                            üìÅ Fichier
                        </button>
                        <button type="button"
                                data-currency-tabs-target="pasteTab"
                                data-action="click->currency-tabs#showPasteTab"
                                class="flex-1 px-4 py-3 font-semibold rounded-t-lg transition-all tab-inactive">
                            üìã Coller
                        </button>
                    </div>

                    <!-- Onglet 1: Upload fichier -->
                    <div data-currency-tabs-target="fileInput">
                        <div class="mb-6">
                            <label for="currency_file" class="block text-sm font-medium mb-3" style="color: var(--text-secondary);">
                                Fichier JSON des monnaies
                            </label>
                            <input
                                type="file"
                                name="currency_file"
                                id="currency_file"
                                accept=".json"
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all text-base"
                            >
                            <p class="text-xs mt-2" style="color: var(--text-secondary);">
                                Format attendu : fichier .json avec header CT_BASE64_V1: (max 5 Mo)
                            </p>
                        </div>
                    </div>

                    <!-- Onglet 2: Coller -->
                    <div class="hidden" data-currency-tabs-target="pasteInput">
                        <div class="mb-6">
                            <label for="currency_paste" class="block text-sm font-medium mb-3" style="color: var(--text-secondary);">
                                Collez vos donn√©es
                            </label>
                            <textarea
                                name="currency_paste"
                                id="currency_paste"
                                rows="8"
                                placeholder="CT_BASE64_V1:eyJjaGFyYWN0ZXJzIjpbey..."
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all font-mono text-sm"
                            ></textarea>
                            <p class="text-xs mt-2" style="color: var(--text-secondary);">
                                Format attendu : CT_BASE64_V1:... (max 5 Mo apr√®s d√©codage)
                            </p>
                        </div>
                    </div>

                    <button
                        type="submit"
                        class="w-full px-6 py-2.5 rounded-lg font-semibold btn-gradient text-white shadow-md hover:shadow-lg hover:scale-[1.02] transition-all"
                    >
                        Charger les donn√©es
                    </button>
                </form>

                <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <p class="text-sm mb-3" style="color: var(--text-secondary);">
                        üí° Les donn√©es sont export√©es depuis l'addon WoW CurrencyTracker au format Base64
                    </p>
                </div>

                <!-- Animated Loader -->
                <div class="hidden card-glass rounded-2xl p-8 md:p-10 shadow-glow max-w-2xl mx-auto" data-currency-upload-target="loader">
                    <div class="text-center">
                        <div class="relative inline-block mb-6">
                            <!-- Outer spinning ring -->
                            <div class="absolute inset-0 rounded-full border-4 border-transparent border-t-blue-500 border-r-purple-500 animate-spin w-24 h-24"></div>

                            <!-- Inner counter-rotating ring -->
                            <div class="absolute inset-0 m-2 rounded-full border-4 border-transparent border-b-purple-500 border-l-blue-500 animate-spin-reverse w-20 h-20"></div>

                            <!-- Center icon -->
                            <div class="relative flex items-center justify-center w-24 h-24">
                                <span class="text-4xl animate-pulse">üí∞</span>
                            </div>
                        </div>

                        <h2 class="text-2xl font-bold mb-3">Chargement en cours...</h2>
                        <p class="text-lg mb-4" style="color: var(--text-secondary);">
                            Traitement du fichier JSON
                        </p>

                        <!-- Bouncing dots -->
                        <div class="flex justify-center gap-2">
                            <div class="w-3 h-3 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 0ms"></div>
                            <div class="w-3 h-3 bg-purple-500 rounded-full animate-bounce" style="animation-delay: 150ms"></div>
                            <div class="w-3 h-3 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 300ms"></div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <!-- Search Form -->
            <div class="card-glass rounded-2xl p-8 md:p-10 shadow-glow max-w-2xl mx-auto">
                <form action="{{ path('app_currency_process') }}" method="POST">
                    <div class="mb-6">
                        <label for="currency" class="block text-sm font-medium mb-3" style="color: var(--text-secondary);">
                            S√©lectionnez une monnaie
                        </label>
                        <select
                            name="currency"
                            id="currency"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all text-base"
                        >
                            <option value="">-- Choisir une monnaie --</option>
                            {% for currencyName in available_currencies %}
                                <option value="{{ currencyName }}">{{ currencyName }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <button
                        type="submit"
                        class="w-full px-6 py-2.5 rounded-lg font-semibold btn-gradient text-white shadow-md hover:shadow-lg hover:scale-[1.02] transition-all"
                    >
                        Rechercher
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <form action="{{ path('app_currency_clear') }}" method="POST">
                        <button type="submit" class="text-sm text-yellow-500 hover:text-yellow-400">
                            Charger un nouveau fichier
                        </button>
                    </form>
                </div>
            </div>
        {% endif %}
    </div>
</div>

<style>
    @keyframes spin-reverse {
        from {
            transform: rotate(360deg);
        }
        to {
            transform: rotate(0deg);
        }
    }

    .animate-spin-reverse {
        animation: spin-reverse 1s linear infinite;
    }

    .tab-active {
        background: linear-gradient(to right, rgb(59 130 246), rgb(168 85 247));
        color: white;
    }

    .tab-inactive {
        background-color: rgb(229 231 235);
        color: rgb(55 65 81);
    }

    .dark .tab-inactive {
        background-color: rgb(55 65 81);
        color: rgb(209 213 219);
    }

    .tab-inactive:hover {
        background-color: rgb(209 213 219);
    }

    .dark .tab-inactive:hover {
        background-color: rgb(75 85 99);
    }
</style>
{% endblock %}
