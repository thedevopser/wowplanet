{% extends 'base.html.twig' %}

{% block title %}Recherche de Monnaies - WowPlanet{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-8">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-yellow-500 to-amber-500 bg-clip-text text-transparent">
                WoW Currency Tracker
            </h1>
            <p class="text-lg" style="color: var(--text-secondary);">
                Trouvez quel personnage possÃ¨de le plus de monnaie
            </p>
        </div>

        <div class="text-right mb-4">
            <a href="{{ path('app_oauth_logout') }}" class="text-sm hover:opacity-70" style="color: var(--text-secondary);">
                DÃ©connexion
            </a>
        </div>

        <div data-controller="currency-search">
            <!-- Search Form -->
            <div class="card-glass rounded-2xl p-8 md:p-10 shadow-glow max-w-2xl mx-auto" data-currency-search-target="form">
                <form action="{{ path('app_currency_process') }}" method="POST" data-action="submit->currency-search#submit">
                    <div class="mb-6">
                        <label for="currency" class="block text-sm font-medium mb-3" style="color: var(--text-secondary);">
                            Nom de la monnaie
                        </label>
                        <input
                            type="text"
                            name="currency"
                            id="currency"
                            placeholder="Ex: Pierre de vol, Jeton du tisse-temps, PiÃ¨ce en bronze de dragon"
                            required
                            autofocus
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-yellow-500 focus:border-transparent transition-all text-base"
                        >
                    </div>

                    <button
                        type="submit"
                        class="w-full px-6 py-2.5 rounded-lg font-semibold btn-gradient text-white shadow-md hover:shadow-lg hover:scale-[1.02] transition-all"
                    >
                        Rechercher
                    </button>
                </form>

                <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <p class="text-center text-sm mb-3" style="color: var(--text-secondary);">
                        Exemples de monnaies :
                    </p>
                    <div class="flex flex-wrap justify-center gap-2">
                        <span class="px-3 py-1 rounded-full bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200 text-xs">Pierre de vol</span>
                        <span class="px-3 py-1 rounded-full bg-amber-100 dark:bg-amber-900 text-amber-800 dark:text-amber-200 text-xs">Jeton du tisse-temps</span>
                        <span class="px-3 py-1 rounded-full bg-orange-100 dark:bg-orange-900 text-orange-800 dark:text-orange-200 text-xs">PiÃ¨ce en bronze de dragon</span>
                    </div>
                </div>
            </div>

            <!-- Animated Loader -->
            <div class="hidden card-glass rounded-2xl p-8 md:p-10 shadow-glow max-w-2xl mx-auto" data-currency-search-target="loader">
                <div class="text-center">
                    <div class="relative inline-block mb-6">
                        <!-- Outer spinning ring -->
                        <div class="absolute inset-0 rounded-full border-4 border-transparent border-t-yellow-500 border-r-amber-500 animate-spin w-24 h-24"></div>

                        <!-- Inner counter-rotating ring -->
                        <div class="absolute inset-0 m-2 rounded-full border-4 border-transparent border-b-amber-500 border-l-yellow-500 animate-spin-reverse w-20 h-20"></div>

                        <!-- Center icon -->
                        <div class="relative flex items-center justify-center w-24 h-24">
                            <span class="text-4xl animate-pulse">ðŸ’°</span>
                        </div>
                    </div>

                    <h2 class="text-2xl font-bold mb-3">Recherche en cours...</h2>
                    <p class="text-lg mb-4" style="color: var(--text-secondary);">
                        Analyse de vos personnages pour la monnaie
                        <span class="font-semibold" data-currency-search-target="currencyName"></span>
                    </p>

                    <!-- Bouncing dots -->
                    <div class="flex justify-center gap-2">
                        <div class="w-3 h-3 bg-yellow-500 rounded-full animate-bounce" style="animation-delay: 0ms"></div>
                        <div class="w-3 h-3 bg-amber-500 rounded-full animate-bounce" style="animation-delay: 150ms"></div>
                        <div class="w-3 h-3 bg-yellow-500 rounded-full animate-bounce" style="animation-delay: 300ms"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes spin-reverse {
        from {
            transform: rotate(360deg);
        }
        to {
            transform: rotate(0deg);
        }
    }
    .animate-spin-reverse {
        animation: spin-reverse 1.5s linear infinite;
    }
</style>
{% endblock %}
