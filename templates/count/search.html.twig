{% extends 'base.html.twig' %}

{% block title %}Compteur de Personnages - WowPlanet{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-8">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-linear-to-r from-blue-500 to-purple-500 bg-clip-text text-transparent">
                Compteur de Personnages
            </h1>
            <p class="text-lg" style="color: var(--text-secondary);">
                Comptez vos personnages par classe, toutes factions confondues
            </p>
        </div>

        <div class="text-right mb-4">
            <a href="{{ path('app_oauth_logout') }}" class="text-sm hover:opacity-70" style="color: var(--text-secondary);">
                Deconnexion
            </a>
        </div>

        <div data-controller="count-loader">
            <!-- Search Form -->
            <div class="card-glass rounded-2xl p-8 md:p-10 shadow-glow max-w-2xl mx-auto" data-count-loader-target="form">
                <form action="{{ path('app_count_process') }}" method="POST" data-action="submit->count-loader#submit">
                    <div class="text-center mb-8">
                        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-blue-500/20 to-purple-500/20 mb-4">
                            <span class="text-4xl">&#128100;</span>
                        </div>
                        <p class="text-sm" style="color: var(--text-secondary);">
                            Analysez tous vos personnages WoW et obtenez un comptage par classe
                        </p>
                    </div>

                    <button
                        type="submit"
                        class="w-full px-6 py-3 rounded-lg font-semibold btn-gradient text-white shadow-md hover:shadow-lg hover:scale-[1.02] transition-all"
                    >
                        Compter mes personnages
                    </button>
                </form>

                <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <p class="text-center text-sm" style="color: var(--text-secondary);">
                        Cette fonctionnalite analysera tous vos comptes WoW et comptera le nombre de personnages par classe.
                    </p>
                </div>
            </div>

            <!-- Animated Loader -->
            <div class="hidden card-glass rounded-2xl p-8 md:p-10 shadow-glow max-w-2xl mx-auto" data-count-loader-target="loader">
                <div class="text-center">
                    <div class="relative inline-block mb-6">
                        <!-- Outer spinning ring -->
                        <div class="absolute inset-0 rounded-full border-4 border-transparent border-t-blue-500 border-r-purple-500 animate-spin w-24 h-24"></div>

                        <!-- Inner counter-rotating ring -->
                        <div class="absolute inset-0 m-2 rounded-full border-4 border-transparent border-b-purple-500 border-l-blue-500 animate-spin-reverse w-20 h-20"></div>

                        <!-- Center icon -->
                        <div class="relative flex items-center justify-center w-24 h-24">
                            <span class="text-4xl animate-pulse">&#128100;</span>
                        </div>
                    </div>

                    <h2 class="text-2xl font-bold mb-3">Analyse en cours...</h2>
                    <p class="text-lg mb-4" style="color: var(--text-secondary);">
                        Comptage de vos personnages par classe
                    </p>

                    <!-- Bouncing dots -->
                    <div class="flex justify-center gap-2">
                        <div class="w-3 h-3 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 0ms"></div>
                        <div class="w-3 h-3 bg-purple-500 rounded-full animate-bounce" style="animation-delay: 150ms"></div>
                        <div class="w-3 h-3 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 300ms"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes spin-reverse {
        from {
            transform: rotate(360deg);
        }
        to {
            transform: rotate(0deg);
        }
    }
    .animate-spin-reverse {
        animation: spin-reverse 1.5s linear infinite;
    }
</style>
{% endblock %}
