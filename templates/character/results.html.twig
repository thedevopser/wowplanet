{% extends 'base.html.twig' %}

{% block title %}Mes Personnages - WowPlanet{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-linear-to-r from-blue-500 to-purple-500 bg-clip-text text-transparent">
                Mes Personnages
            </h1>
            <p class="text-lg" style="color: var(--text-secondary);">
                Tous vos personnages World of Warcraft
            </p>
        </div>

        {% if characters is empty %}
            <div class="card-glass rounded-xl p-8 text-center">
                <p class="text-xl font-semibold mb-2">Aucun personnage trouve</p>
                <p class="text-sm" style="color: var(--text-secondary);">
                    Aucun personnage n'a ete trouve sur votre compte Battle.net.
                </p>
            </div>
        {% else %}
            <div class="mb-6 flex items-center justify-between">
                <p class="text-sm" style="color: var(--text-secondary);">
                    <span class="font-bold text-white">{{ characters|length }}</span> personnages trouves
                </p>
                <div class="flex items-center gap-4">
                    <div class="text-xs font-semibold opacity-40 uppercase tracking-widest">
                        <span data-results-pagination-target="pageInfo"></span>
                    </div>
                    <form method="post" action="{{ path('app_characters_refresh') }}">
                        <button type="submit"
                                class="text-xs px-3 py-1.5 rounded-lg card-glass hover:bg-white/10 transition-colors font-medium"
                                style="color: var(--text-secondary);">
                            Rafraichir
                        </button>
                    </form>
                </div>
            </div>

            <div data-controller="results-pagination" data-results-pagination-per-page-value="12">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-16">
                    {% for character in characters %}
                        <twig:PlayerCharacterCard :character="character" :index="loop.index" />
                    {% endfor %}
                </div>

                {% set totalPages = (characters|length / 12)|round(0, 'ceil') %}
                {% if totalPages > 1 %}
                    <div class="card-glass rounded-xl p-6">
                        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                            <button
                                data-results-pagination-target="prevButton"
                                data-action="click->results-pagination#previousPage"
                                class="px-5 py-2.5 rounded-lg bg-white/5 hover:bg-white/10 transition-all disabled:opacity-30 disabled:cursor-not-allowed font-medium"
                            >
                                ← Precedent
                            </button>

                            <div class="flex gap-2 flex-wrap justify-center">
                                {% for page in 1..totalPages %}
                                    <button
                                        data-results-pagination-target="page"
                                        data-page="{{ page }}"
                                        data-action="click->results-pagination#goToPage"
                                        class="w-10 h-10 rounded-lg text-sm font-bold transition-all hover:bg-white/10 hover:text-white {% if page == 1 %}bg-blue-600 text-white shadow-lg shadow-blue-500/30{% else %}bg-white/5 text-white/60{% endif %}"
                                    >
                                        {{ page }}
                                    </button>
                                {% endfor %}
                            </div>

                            <button
                                data-results-pagination-target="nextButton"
                                data-action="click->results-pagination#nextPage"
                                class="px-5 py-2.5 rounded-lg bg-white/5 hover:bg-white/10 transition-all disabled:opacity-30 disabled:cursor-not-allowed font-medium"
                            >
                                Suivant →
                            </button>
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endif %}

        <div class="mt-12 text-center">
            <a href="{{ path('app_home') }}" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg card-glass hover:bg-white/5 transition-colors font-medium">
                Retour a l'accueil
            </a>
        </div>
    </div>
</div>

<style>
