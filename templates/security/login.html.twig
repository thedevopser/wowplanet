{% extends 'base.html.twig' %}

{% block title %}Connexion | Wowplanet{% endblock %}

{% block body %}
    <div class="text-center">
        <h1 class="text-3xl font-bold text-yellow-500 mb-6">Connexion</h1>
        <p class="text-lg text-gray-300 mb-10">Connectez-vous avec votre service préféré :</p>

        {% if error %}
            <div class="text-red-500 font-bold mb-4">
                {{ error }}
            </div>
        {% endif %}

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <a href="{{ path('connect_google') }}" class="bg-red-500 text-white font-semibold px-6 py-3 rounded-lg shadow-md hover:bg-red-400 transition">
                Connexion avec Google
            </a>
            <a href="{{ path('connect_discord') }}" class="bg-indigo-500 text-white font-semibold px-6 py-3 rounded-lg shadow-md hover:bg-indigo-400 transition">
                Connexion avec Discord
            </a>
            <a href="{{ path('connect_battlenet') }}" class="bg-blue-500 text-white font-semibold px-6 py-3 rounded-lg shadow-md hover:bg-blue-400 transition">
                Connexion avec Battle.net
            </a>
        </div>
    </div>
{% endblock %}
