{# templates/pagination.html.twig #}
{% if pageCount > 1 %}
    <div class="flex justify-center gap-2">
        {% if first is defined and current != first %}
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" class="px-4 py-2 bg-zinc-700 text-yellow-500 rounded-lg hover:bg-zinc-600 transition-colors">
                Premier
            </a>
        {% endif %}

        {% if previous is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="px-4 py-2 bg-zinc-700 text-yellow-500 rounded-lg hover:bg-zinc-600 transition-colors">
                Précédent
            </a>
        {% endif %}

        <span class="px-4 py-2 bg-zinc-700 text-yellow-500 rounded-lg">
            Page {{ current }} sur {{ pageCount }}
        </span>

        {% if next is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="px-4 py-2 bg-zinc-700 text-yellow-500 rounded-lg hover:bg-zinc-600 transition-colors">
                Suivant
            </a>
        {% endif %}

        {% if last is defined and current != last %}
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" class="px-4 py-2 bg-zinc-700 text-yellow-500 rounded-lg hover:bg-zinc-600 transition-colors">
                Dernier
            </a>
        {% endif %}
    </div>
{% endif %}