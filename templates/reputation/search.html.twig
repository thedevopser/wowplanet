{% extends 'base.html.twig' %}

{% block title %}Recherche de Réputations - WowPlanet{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-8">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-linear-to-r from-blue-500 to-purple-500 bg-clip-text text-transparent">
                ⚔️ WoW Reputation Tracker
            </h1>
            <p class="text-lg" style="color: var(--text-secondary);">
                Trouvez quel personnage a la meilleure réputation
            </p>
        </div>

        <div data-controller="reputation-search">
            <!-- Search Form -->
            <div class="card-glass rounded-2xl p-8 md:p-10 shadow-glow max-w-2xl mx-auto" data-reputation-search-target="form">
                <form action="{{ path('app_reputation_process') }}" method="POST" data-action="submit->reputation-search#submit">
                    <div class="mb-6">
                        <label for="faction" class="block text-sm font-medium mb-3" style="color: var(--text-secondary);">
                            Nom de la faction
                        </label>
                        <input
                            type="text"
                            name="faction"
                            id="faction"
                            placeholder="Ex: Gilnéas, Guilde Valdrakken, Gardiens du Rêve"
                            required
                            autofocus
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-800 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all text-base"
                        >
                    </div>

                    <button
                        type="submit"
                        class="w-full px-6 py-2.5 rounded-lg font-semibold btn-gradient text-white shadow-md hover:shadow-lg hover:scale-[1.02] transition-all"
                    >
                        Rechercher
                    </button>
                </form>

                <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <p class="text-center text-sm mb-3" style="color: var(--text-secondary);">
                        Exemples de factions :
                    </p>
                    <div class="flex flex-wrap justify-center gap-2">
                        <span class="px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs">Gilnéas</span>
                        <span class="px-3 py-1 rounded-full bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 text-xs">Guilde Valdrakken</span>
                        <span class="px-3 py-1 rounded-full bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 text-xs">Gardiens du Rêve</span>
                    </div>
                </div>
            </div>

            <!-- Animated Loader -->
            <div class="hidden card-glass rounded-2xl p-8 md:p-10 shadow-glow max-w-2xl mx-auto" data-reputation-search-target="loader">
                <div class="text-center">
                    <div class="relative inline-block mb-6">
                        <!-- Outer spinning ring -->
                        <div class="absolute inset-0 rounded-full border-4 border-transparent border-t-blue-500 border-r-purple-500 animate-spin w-24 h-24"></div>

                        <!-- Inner counter-rotating ring -->
                        <div class="absolute inset-0 m-2 rounded-full border-4 border-transparent border-b-purple-500 border-l-blue-500 animate-spin-reverse w-20 h-20"></div>

                        <!-- Center icon -->
                        <div class="relative flex items-center justify-center w-24 h-24">
                            <span class="text-4xl animate-pulse">⚔️</span>
                        </div>
                    </div>

                    <h2 class="text-2xl font-bold mb-3">Recherche en cours...</h2>
                    <p class="text-lg mb-4" style="color: var(--text-secondary);">
                        Analyse de vos personnages pour la faction
                        <span class="font-semibold" data-reputation-search-target="factionName"></span>
                    </p>

                    <!-- Bouncing dots -->
                    <div class="flex justify-center gap-2">
                        <div class="w-3 h-3 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 0ms"></div>
                        <div class="w-3 h-3 bg-purple-500 rounded-full animate-bounce" style="animation-delay: 150ms"></div>
                        <div class="w-3 h-3 bg-blue-500 rounded-full animate-bounce" style="animation-delay: 300ms"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes spin-reverse {
        from {
            transform: rotate(360deg);
        }
        to {
            transform: rotate(0deg);
        }
    }
    .animate-spin-reverse {
        animation: spin-reverse 1.5s linear infinite;
    }
</style>
{% endblock %}
