<div {{ attributes }} class="p-8 rounded-xl border card-glass transition-all duration-300 {{ hover ? 'hover:shadow-xl' : '' }} {{ disabled ? 'opacity-60' : '' }}">
	{% if icon %}
		<div class="text-5xl mb-4">{{ icon }}</div>
	{% endif %}

	{% if title %}
		<h2 class="text-2xl font-bold mb-3" style="color: var(--text-primary);">{{ title }}</h2>
	{% endif %}

	{% if description %}
		<p style="color: var(--text-secondary);">{{ description }}</p>
	{% endif %}

	{% if buttonText %}
		{% if disabled %}
			<span class="inline-block mt-6 px-6 py-3 rounded-lg font-medium card-glass" style="color: var(--text-tertiary);">
				{{ buttonText }}
			</span>
		{% else %}
			<a href="{{ buttonUrl ?? '#' }}" class="inline-block mt-6 px-6 py-3 rounded-lg font-medium btn-gradient text-white">
				{{ buttonText }}
			</a>
		{% endif %}
	{% endif %}
</div>
