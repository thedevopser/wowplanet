<?xml version="1.0"?>
<ruleset name="WowPlanet PHPCBF">
    <description>Configuration PHPCBF pour WowPlanet avec PSR12</description>

    <!-- Standard de code : PSR-12 -->
    <rule ref="PSR12"/>

    <!-- Fichiers à analyser -->
    <file>../src</file>
    <file>../tests</file>

    <!-- Fichiers à exclure -->
    <exclude-pattern>../src/Kernel.php</exclude-pattern>
    <exclude-pattern>*/var/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>

    <!-- Configuration des paramètres -->
    <arg name="colors"/>
    <arg name="parallel" value="4"/>
    <arg name="tab-width" value="4"/>
    <arg value="sp"/>
</ruleset>
